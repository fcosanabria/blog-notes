#!/bin/bash

/usr/local/bin/mise trust /workspaces/blog-notes/mise.toml && /usr/local/bin/mise install

sudo apt update && sudo apt install -y build-essential

sudo apt update && sudo apt install -y libffi-dev \
  libyaml-dev \
  libssl-dev \
  libreadline-dev \
  zlib1g-dev \
  curl \
  git \
  fish

# Instalar chezmoi y aplicar dotfiles si DOTFILES_URL estÃ¡ configurado
if [ -n "$DOTFILES_URL" ]; then
  sh -c "$(curl -fsLS get.chezmoi.io)" -- init --apply "$DOTFILES_URL"
  # Agregar bin directory al PATH
  echo 'export PATH="$HOME/bin:$PATH"' >>/home/vscode/.bashrc
fi
